<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Основной фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDE6F9"/> <!-- Цвет фона -->
        </shape>

    </item>

    <!-- Рамка -->
    <item>

        <shape android:shape="rectangle">
            <corners android:radius="8dp"/> <!-- Закругление углов -->

            <solid android:color="@android:color/transparent"/> <!-- Прозрачный фон для рамки -->
            <stroke
                android:width="2dp"
                android:color="#C4D1F0"/> <!-- Цвет и размер рамки -->
        </shape>
    </item>

</layer-list>